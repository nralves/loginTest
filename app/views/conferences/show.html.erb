<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @conference.name %>
</p>

<p>
  <b>Begin:</b>
  <%= @conference.begin.strftime("%d - %B %Y") %>
</p>

<p>
  <b>End:</b>
  <%= @conference.end.strftime("%d - %B %Y") %>
</p>

<p>
  <b>Location:</b>
  <%= @conference.location %>
</p>

<p>
  <b>Logo:</b>
  <%= @conference.logo %>
</p>

  <h2>Add User</h2>
<%= form_tag addUser_conferences_path,multipart: true do %>
  <%= text_field_tag :email %><br /><br />
  <%= hidden_field_tag "id", @conference.id %>
  <%= submit_tag "Add User" %>
<% end %>

<h2>Remove User</h2>
<%= form_tag removeUser_conferences_path, multipart: true do %>
  <%= text_field_tag :email %><br /><br />
  <%= hidden_field_tag "id", @conference.id %>
  <%= submit_tag "Remove User" %>
<% end %>


