{
		"conference":
					{
						"id": "<%= @conference.id %>",
						"name": "<%= @conference.name %>",
						"location": "<%= @conference.location %>",
						"begin": "<%= @conference.begin %>",
						"end": "<%= @conference.end %>",
						"events": {
							"event": [
								<% @conference.events.each do |event| %>
								{
									"name": "<%= event.name %>",
									"room": "<%= event.room %>",
									"begin": "<%= event.begin %>",
									"end": "<%= event.end %>",
									
									"lecturers": {
											"lecturer": [
												<% event.lecturers.each do |lecturer| %>
												{
													"name": "<%= lecturer.name %>",
												},
													<% end %>
													 ]
											}
								},
									<% end %>
									 ]
								  }
					},
					
} 